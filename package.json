{
  "name": "task-manager-express",
  "version": "0.0.0",
  "description": "A simple and efficient task manager application to create, organize, and track tasks with ease.",
  "homepage": "https://github.com/bruno-1/task-manager-express#readme",
  "bugs": {
    "url": "https://github.com/bruno-1/task-manager-express/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bruno-1/task-manager-express.git"
  },
  "author": "Bruno Serafini",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "lint": "npx eslint .",
    "prepare": "husky",
    "commit": "cz",
    "start:dev": "node --env-file=.env --watch src/index.js",
    "start": "node --env-file=.env src/index.js"
  },
  "lint-staged": {
    "*.js": "npm run lint",
    "*.{js,json,md}": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "3.6.2"
  },
  "dependencies": {
    "express": "^5.1.0",
    "helmet": "^8.1.0"
  }
}
